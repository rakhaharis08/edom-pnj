<script>
  $(document).ready(function() {
    // Fungsi untuk melakukan pencarian berdasarkan keyword
    function performSearch(keyword) {
      var rows = $("#prodi-table-body tr");
      rows.hide();

      // Cari setiap baris yang cocok dengan keyword
      rows.each(function() {
        var rowText = $(this).text().toLowerCase();
        if (rowText.indexOf(keyword.toLowerCase()) !== -1) {
          $(this).show();
        }
      });
    }

    // Handler saat input pencarian berubah (real-time search)
    $("#search-input").on("input", function() {
      var keyword = $(this).val();
      performSearch(keyword);
    });

    // Handler saat form pencarian di-submit (untuk mobile)
    $("#search-form-mobile").submit(function(event) {
      event.preventDefault();
      var keyword = $("#search-input-mobile").val();
      performSearch(keyword);
    });

    // Inisialisasi halaman pertama saat load
    showPage(1);

    // Fungsi untuk menampilkan data pada halaman tertentu
    function showPage(pageNumber) {
      var rows = $("#prodi-table-body tr");
      var itemsPerPage = 10;
      var startIndex = (pageNumber - 1) * itemsPerPage;
      var endIndex = startIndex + itemsPerPage;

      rows.hide();
      rows.slice(startIndex, endIndex).show();

      // Tampilkan tombol pagination
      showPagination(Math.ceil(rows.length / itemsPerPage), pageNumber);
    }

    // Fungsi untuk menampilkan tombol pagination
    function showPagination(totalPageCount, currentPage) {
      var pagination = $(".pagination");
      pagination.empty();

      for (var i = 1; i <= totalPageCount; i++) {
        var activeClass = (i === currentPage) ? "active" : "";
        pagination.append("<li class='" + activeClass + "' data-page='" + i + "'>" + i + "</li>");
      }

      // Tambahkan event click pada setiap tombol pagination
      pagination.find("li").click(function() {
        var pageNumber = $(this).data("page");
        showPage(pageNumber);
      });
    }
  });
</script>
